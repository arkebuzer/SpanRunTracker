<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="com.arkebuzer.konstantin.spanruntracker.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView android:id="@+id/input_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/input_header"
        android:textSize="12pt"/>

    <LinearLayout android:id="@+id/input_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/input_header">

        <EditText android:id="@+id/edit_circles_cnt"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multiply" />

        <EditText android:id="@+id/edit_work_distance"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/divide" />

        <EditText android:id="@+id/edit_rest_distance"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </LinearLayout>

    <Button
        android:id ="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:background="@drawable/button_bg_round"
        android:layout_below="@id/input_area"
        android:textSize="16pt"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:onClick="startRun"/>

</RelativeLayout>
